<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCheckoutTitle"
            android:text="Choose Payment Method"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- RadioGroup ensures a single logical selection (we control checks in code) -->
        <RadioGroup
            android:id="@+id/rgPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cash on Delivery card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCOD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="COD Icon"/>

                    <RadioButton
                        android:id="@+id/rbCOD"
                        android:text="Cash on Delivery"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Online Payment card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Online Icon"/>

                    <RadioButton
                        android:id="@+id/rbOnline"
                        android:text="Online Payment"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Payment card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCardPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Card Icon"/>

                    <RadioButton
                        android:id="@+id/rbCard"
                        android:text="Card Payment"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </RadioGroup>

        <!-- Card Details (visible only when Card Payment selected) -->
        <LinearLayout
            android:id="@+id/llCardDetails"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <!-- Card Name -->
            <TextView
                android:id="@+id/tvCardNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etCardName"
                android:hint="Cardholder name"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Card Number -->
            <TextView
                android:id="@+id/tvCardNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etCardNumber"
                android:hint="1234 5678 9012 3456"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:inputType="number"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Expiry -->
            <TextView
                android:id="@+id/tvExpiryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry (MM/YY)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etExpiry"
                android:hint="MM/YY"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- CVV -->
            <TextView
                android:id="@+id/tvCVVLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etCVV"
                android:hint="3 or 4 digits"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:inputType="numberPassword"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPay"
            android:text="Pay"
            android:backgroundTint="#cc2828"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
