<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp"
    android:layout_margin="20dp">

    <!-- Close Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/close_button_bg"
            android:text="Ã—"
            android:textColor="#666666"
            android:textSize="20sp"
            android:gravity="center" />

    </RelativeLayout>

    <!-- Item Image with zoom capability -->
    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Item Name -->
    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delicious Pizza"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Item Description -->
    <TextView
        android:id="@+id/tvItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A mouth-watering pizza with fresh ingredients, premium cheese, and perfect blend of flavors. Made with love and traditional recipes."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="2dp"
        android:justificationMode="inter_word" />

    <!-- Price -->
    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs. 750"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Size Options (Placeholder for future) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ• Available Sizes: Regular, Large\nâ±ï¸ Preparation Time: 15-20 minutes"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

    <!-- Quantity Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Quantity: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDecreaseDialog"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/quantity_button_bg"
            android:text="-"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantityDialog"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIncreaseDialog"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/quantity_button_bg"
            android:text="+"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add to Cart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary_bg"
        android:elevation="2dp" />

</LinearLayout>